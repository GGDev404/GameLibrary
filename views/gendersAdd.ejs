  <div class="conatiner mt-4">
    <div class="card borde-secondary">
      <div class="card-header">NUEVO GÉNERO</div>
      <div class="card-body">
        <form action="/addGender" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="nombre" class="form-label">Nombre del género</label>
            <input type="text" class="form-control" id="nombre" name="nombre" required>
          </div>
          <div class="mb-3">
            <label for="descripcion" class="form-label">Descripción</label>
            <textarea class="form-control" id="descripcion" name="descripcion" required></textarea>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Imagen</label>
            <input type="file" class="form-label" name="image" id="image" accept="image/*" required>
          </div>
            
          <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
          <a href="/genders" class="btn btn-secondary">Cancelar</a>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
